<link rel="stylesheet" href="css/profile.css">

<%- contentFor('script') %>
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
<script defer src="js/profile.js"></script>

<%- contentFor('body') %>
<div class="pop-up-message ">
  <div class="message-box " id="message-box">
    <h3></h3>
    <h4></h4>
    <p></p>
    <button id="message-box-btn">OK</button>
  </div>
</div>
<div class="profile-content-area">
  <section class="image-section">
    <% if(!haveImage) { %>
    <div class="image-icon">
      <img src="data:image/png;base64,">
      <img src="data:image/png;base64,">
    </div>
    <div class="my-image">
      <img src="#" alt="My Profile Picture" id="my-profile-image">
    </div>
    <form action="profile/image_upload" method="post" enctype="multipart/form-data">
      <input type="file" id="image-input" name="file" accept="image/jpeg,image/png,image/jpg">
      <label for="image-input" id="image-input-label">
        <h5>Add Image</h5>
      </label>
      <input type="submit" value="Save" id="image-save-button">
      <button type="button" class="remove-button" id="remove-image-button-client">Remove Image</button>
    </form>
    <% }else{ %>
    <div class="my-image" style="display: block;">
      <img src="profile/image" alt="My Profile Picture" id="my-profile-image">
    </div>
    <button type="button" class="remove-button" id="remove-image-button-server" style="display: block;">Remove
      Image</button>
    <% } %>
  </section>
  <section class="user-informaiton">
    <pre><span>Name : </span><%=name %></pre>
    <pre><span>Email: </span><%=email %></pre>
    <pre><span>Phone: </span><%=phoneNumber %></pre>
  </section>
  <section class="button-section">
    <button id="change-password-button">Change Password</button>
    <a href="verify_otp/delete_account">
      <button id="delete-account-button">Delete Account</button>
    </a>
  </section>
  <section class="change-password">
    <form action="profile/change_password">
      <div class="input-box">
        <ion-icon name="lock-closed-outline"></ion-icon>
        <input id="old-password" type="password" required>
        <label for="">Old Password</label>
      </div>
      <div class="input-box">
        <ion-icon name="eye-off-outline" id="password-icon"></ion-icon>
        <input id="new-password" type="password" required>
        <label for="">New password</label>
      </div>
      <button id="change-password-submit-button">SUBMIT</button>
    </form>
  </section>
</div>